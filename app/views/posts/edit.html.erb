<h1>Editing post</h1>

<%= form_for :post, url: post_path(@post), method: :patch do |f| %>

  <div class="row">
    <div class="col-md-4">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
    </div>
  </div>

  <p>
      <%= f.label :text %><br>
      <%= f.text_area :text%>
  </p>

  <p>
      <%= f.submit %>
  </p>

<% end %>

<%= link_to 'Back to List of Posts', posts_path %>
